#![enable(implicit_some)]
#![enable(unwrap_newtypes)]
#![enable(unwrap_variant_newtypes)]

(
    default_album_art_path: None,
    show_song_table_header: true,
    draw_borders: true,
    format_tag_separator: " | ",
    browser_column_widths: [20, 38, 42],

    background_color: "#1e1e2e",
    text_color: "#cdd6f4",
    header_background_color: "#181825",
    modal_background_color: "#181825",

    preview_label_style: (fg: "#f9e2af"),
    preview_metadata_group_style: (fg: "#f9e2af", modifiers: "Bold"),

    tab_bar: (
        active_style: (fg: "black", bg: "#cba6f7", modifiers: "Bold"),
        inactive_style: (fg: "#6c7086"),
    ),

    highlighted_item_style: (fg: "#f9e2af", modifiers: "Bold"),
    current_item_style: (fg: "black", bg: "#b4befe", modifiers: "Bold"),
    borders_style: (fg: "#6c7086"),
    highlight_border_style: (fg: "#f9e2af"),

    symbols: (
        song: "Û∞ùö",
        dir: "ÔÅª",
        playlist: "Û∞≤∏",
        marker: "\u{e0b0}",
        ellipsis: "...",
    ),

    progress_bar: (
        symbols: ["ÓΩå", "ÓΩå", "‚≠ò", " ", " "],
        track_style: (bg: "#181825"),
        elapsed_style: (fg: "#cba6f7", bg: "#181825"),
        thumb_style: (fg: "#cba6f7", bg: "#181825"),
    ),

    scrollbar: (
        symbols: ["‚îÇ", "‚ñà", "‚ñ≤", "‚ñº"],
        track_style: (),
        ends_style: (),
        thumb_style: (fg: "#b4befe"),
    ),

    song_table_format: [
        (
            prop: (
                kind: Property(Artist),
                style: (fg: "#89b4fa"),
                default: (kind: Text("Unknown"), style: (fg: "#6c7086")),
            ),
            width: "20%",
        ),
        (
            prop: (
                kind: Property(Title),
                style: (fg: "#cba6f7"),
                default: (kind: Text("Unknown"), style: (fg: "#6c7086")),
            ),
            width: "35%",
        ),
        (
            prop: (
                kind: Property(Album),
                style: (fg: "#89b4fa"),
                default: (kind: Text("Unknown Album"), style: (fg: "#6c7086")),
            ),
            width: "30%",
        ),
        (
            prop: (
                kind: Property(Duration),
                style: (fg: "#a6adc8"),
                default: (kind: Text("-")),
            ),
            width: "15%",
            alignment: Right,
        ),
    ],

    layout: Split(
        direction: Vertical,
        panes: [
            (
                size: "4",
                pane: Split(
                    direction: Horizontal,
                    panes: [
                        (
                            size: "100%",
                            pane: Split(
                                direction: Vertical,
                                panes: [
                                    (
                                        size: "4",
                                        borders: "ALL",
                                        pane: Pane(Header),
                                    ),
                                ],
                            ),
                        ),
                    ],
                ),
            ),
            (
                size: "3",
                pane: Pane(Tabs),
            ),
            (
                size: "100%",
                pane: Split(
                    direction: Horizontal,
                    panes: [
                        (
                            size: "100%",
                            borders: "NONE",
                            pane: Pane(TabContent),
                        ),
                    ],
                ),
            ),
            (
                size: "3",
                borders: "TOP | BOTTOM",
                pane: Pane(ProgressBar),
            ),
        ],
    ),

    header: (
        rows: [
            (
                left: [
                    (kind: Text("["), style: (fg: "#b4befe", modifiers: "Bold")),
                    (kind: Property(Status(State)), style: (fg: "#b4befe", modifiers: "Bold")),
                    (kind: Text("]"), style: (fg: "#b4befe", modifiers: "Bold")),
                ],
                center: [
                    (
                        kind: Property(Song(Title)),
                        style: (fg: "#89b4fa", modifiers: "Bold"),
                        default: (kind: Text("No Song"), style: (fg: "#89b4fa", modifiers: "Bold")),
                    ),
                ],
                right: [
                    (kind: Property(Widget(ScanStatus)), style: (fg: "#b4befe")),
                    (kind: Property(Widget(Volume)), style: (fg: "#b4befe")),
                ],
            ),
            (
                left: [
                    (kind: Property(Status(Elapsed)), style: (fg: "#cdd6f4")),
                    (kind: Text(" / "), style: (fg: "#6c7086")),
                    (kind: Property(Status(Duration)), style: (fg: "#cdd6f4")),
                    (kind: Text(" ("), style: (fg: "#6c7086")),
                    (kind: Property(Status(Bitrate)), style: (fg: "#cdd6f4")),
                    (kind: Text(" kbps)"), style: (fg: "#6c7086")),
                ],
                center: [
                    (
                        kind: Property(Song(Artist)),
                        style: (fg: "#f9e2af", modifiers: "Bold"),
                        default: (kind: Text("Unknown"), style: (fg: "#f9e2af", modifiers: "Bold")),
                    ),
                    (kind: Text(" - "), style: (fg: "#6c7086")),
                    (
                        kind: Property(Song(Album)),
                        style: (fg: "#89b4fa"),
                        default: (kind: Text("Unknown Album"), style: (fg: "#89b4fa")),
                    ),
                ],
                right: [
                    (
                        kind: Property(
                            Widget(
                                States(
                                    active_style: (fg: "#cdd6f4", modifiers: "Bold"),
                                    separator_style: (fg: "#6c7086"),
                                ),
                            ),
                        ),
                        style: (fg: "#6c7086"),
                    ),
                ],
            ),
        ],
    ),

    browser_song_format: [
        (
            kind: Group([
                (kind: Property(Track)),
                (kind: Text(" ")),
            ]),
        ),
        (
            kind: Group([
                (kind: Property(Artist)),
                (kind: Text(" - ")),
                (kind: Property(Title)),
            ]),
            default: (kind: Property(Filename)),
        ),
    ],

    cava: (
        bar_symbols: ['‚ñÅ', '‚ñÇ', '‚ñÉ', '‚ñÑ', '‚ñÖ', '‚ñÜ', '‚ñá', '‚ñà'],
        inverted_bar_symbols: ['‚ñî', 'üÆÇ', 'üÆÉ', '‚ñÄ', 'üÆÑ', 'üÆÖ', 'üÆÜ', '‚ñà'],
        bg_color: "#1e1e2e",
        bar_width: 1,
        bar_spacing: 1,
        orientation: Bottom,
        bar_color: Gradient({
              0:   "#94e2d5",
             15:   "#89dceb",
             30:   "#74c7ec",
             45:   "#89b4fa",
             60:   "#cba6f7",
             75:   "#f5c2e7",
             90:   "#eba0ac",
            100:   "#f38ba8",
        }),
    ),
)
